<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frame_admin_chat"
    android:clickable="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image_admin_chat_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_admin_chat_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/image_admin_chat_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                tools:text="Nguyen Van A"/>

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/text_admin_chat_last_message"
                android:layout_width="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/text_admin_chat_name"
                app:layout_constraintStart_toEndOf="@id/image_admin_chat_avatar"
                android:layout_height="wrap_content"
                tools:text="Hello world! Hello world! Hello world!"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>